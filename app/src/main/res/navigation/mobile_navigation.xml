<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_home">


    <fragment
        android:id="@+id/navigation_cart"
        android:name="com.example.grocerydelivery.ui.cart.CartFragment"
        android:label="CartFragment" />
    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.grocerydelivery.ui.home.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_navigation_home_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.grocerydelivery.ui.profile.ProfileFragment"
        android:label="ProfileFragment" />
    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.grocerydelivery.ui.search.SearchFragment"
        android:label="SearchFragment" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.grocerydelivery.ui.ui.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" />
</navigation>